        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="Cosas de recetas" id="recetas.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Recetas" id="recetas.menu_1" parent="recetas.menu_root"/>
    <menuitem name="Ingredientes" id="recetas.menu_2" parent="recetas.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="recetas.menu_1_list" parent="recetas.menu_1"
              action="recetas.action_window"/>

  </data>
</odoo>